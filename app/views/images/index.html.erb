<h3>Images</h3>

<% if @images.size > 0 %>
    <table cellspacing="1" cellpadding="5">
      <tr class="header">
        <th>ID</th>
        <th>Image status</th>
        <th>Image description</th>
      </tr>
      <% for image in @images %>
          <tr class="row">
            <td>
              <%= link_to "#{image.id}", image %></td>
            <td><%= image.status %></td>
            <td><%= image.description %></td>
          </tr>
      <% end %>
    </table>
<% else %>
    <p>No images found.</p>
<% end %>
