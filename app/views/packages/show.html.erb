<h3>Package <%= @package.id %></h3>

<table cellspacing="1" cellpadding="5">
  <tr class="row">
    <td>ID</td>
    <td><%= link_to "Package #{@package.id}", :id => @package.id, :action => :show, :controller => 'packages' %>
    </td>
  </tr>
  <tr class="row">
    <td>Status</td>
    <td><%= @package.status %>
    </td>
  </tr>
  <tr class="row">
    <td>Format</td>
    <td><%= @package.package_format %>
    </td>
  </tr>
  <tr class="row">
    <td>Image</td>
    <td><%= link_to "Image #{@package.image_id}", :id => @package.image_id, :action => :show, :controller => 'images' %>
    </td>
  </tr>
  <tr class="row">
    <td>Description</td>
    <td><%= @package.description %>
    </td>
  </tr>
  <tr class="row">
    <td>Created</td>
    <td><%= @package.created_at %>
    </td>
  </tr>
  <tr class="row">
    <td>Modified</td>
    <td><%= @package.updated_at %>
    </td>
  </tr>
</table>

<% unless is_package_in_progress? %>
    <h4>Available actions</h4>
    <ul>
      <% unless is_package_status?(:error) %>
          <% if is_package_status?(:built) %>
              <li><%= link_to "Download", { :controller => 'packages', :action => :download, :id => @package.id } %> </li>
          <% end %>
          <% unless is_package_status?(:building) %>
              <li><%= link_to "Destroy", { :action => :destroy, :id => @package.id }, :method => :delete, :confirm => "Are you sure?" %> </li>
          <% end %>
      <% end %>
    </ul>
<% end %>