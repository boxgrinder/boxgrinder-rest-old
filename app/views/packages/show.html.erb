<h3>Package <%= @package.id %></h3>

<table cellspacing="1" cellpadding="5">
  <tr class="row">
    <td>ID</td>
    <td><%= @package.id %>
    </td>
  </tr>
  <tr class="row">
    <td>Status</td>
    <td><%= @package.status %>
    </td>
  </tr>
  <tr class="row">
    <td>Image</td>
    <td><%= link_to "Image #{@package.image_id}", :id => @package.image_id, :action => :show, :controller => 'images' %>
    </td>
  </tr>
  <tr class="row">
    <td>Description</td>
    <td><%= @package.description %>
    </td>
  </tr>
  <tr class="row">
    <td>Created</td>
    <td><%= @package.created_at %>
    </td>
  </tr>
  <tr class="row">
    <td>Modified</td>
    <td><%= @package.updated_at %>
    </td>
  </tr>
</table>
